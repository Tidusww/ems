<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ly.ems.core.mybatis.dao.impl.AbstractBaseDao" >

    <resultMap id="BaseMap" type="com.ly.ems.model.BaseModel">
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="status" property="status" jdbcType="INTEGER" />
    </resultMap>

    <select id="getById" resultMap="BaseMap">
        SELECT * FROM ${table} WHERE id = #{id, jdbcType=INTEGER}
    </select>
    <delete id="delete">
        DELETE FROM ${table}
        WHERE id = #{id,jdbcType=INTEGER}
    </delete>
    <update id="updateStatus">
        UPDATE ${table}
        SET status = #{status,javaType=com.ly.ems.model.common.constant.StatusEnum}
        WHERE id = #{id,jdbcType=INTEGER}
    </update>

</mapper>