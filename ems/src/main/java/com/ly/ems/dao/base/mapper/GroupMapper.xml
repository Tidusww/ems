<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ly.ems.dao.base.GroupMapper" >

    <resultMap id="BaseGroupMap" type="com.ly.ems.model.base.group.Group">
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="group_name" property="groupName" jdbcType="VARCHAR" />
        <result column="employee_id" property="employeeId" jdbcType="INTEGER" />
        <result column="employee_name" property="employeeName" jdbcType="VARCHAR" />
        <result column="phone" property="phone" jdbcType="VARCHAR" />
        <result column="status" property="status" jdbcType="INTEGER" />
    </resultMap>

    <select id="getGroupById" resultMap="BaseGroupMap">
        SELECT g.* FROM ly_group g WHERE g.id = #{id, jdbcType=INTEGER}
    </select>

    <select id="getGroupsByConditions" parameterType="com.ly.ems.model.base.group.GroupConditions" resultMap="BaseGroupMap">
        SELECT g.* FROM ly_group g WHERE 1=1 AND status = 1
        <if test="groupName != null and groupName != ''"> AND g.group_name like CONCAT('%', #{groupName, jdbcType=VARCHAR}, '%') </if>
        <if test="employeeName != null and employeeName != ''"> AND g.employee_name like CONCAT('%', #{employeeName, jdbcType=VARCHAR}, '%') </if>
        <if test="phone != null and phone != ''"> AND g.phone = #{phone, jdbcType=VARCHAR} </if>
    </select>

</mapper>