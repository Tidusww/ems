<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="standard" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- root -->
    <root level="WARN">
        <appender-ref ref="standard" />
    </root>

</configuration>